<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="553" Width="891">
    <Grid Margin="0,0,2,0">
        <Button x:Name="b_pull" Content="Pull Dependancies" HorizontalAlignment="Left" Margin="364,180,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.947,0.7" Click="b_pull_Click"/>
        <Button x:Name="b_push_hex" Content="Push Hexagon" HorizontalAlignment="Left" Margin="126,180,0,0" VerticalAlignment="Top" Width="112" Click="b_push_hex_Click"/>
        <Button x:Name="b_install" Content="Install Image" HorizontalAlignment="Left" Margin="37,180,0,0" VerticalAlignment="Top" Width="75" Click="b_install_Click"/>
        <Button x:Name="b_push_calib" Content="Push Calibrations" HorizontalAlignment="Left" Margin="245,180,0,0" VerticalAlignment="Top" Width="112" Click="b_push_cal_Click"/>

        <Grid HorizontalAlignment="Left" Height="38" Margin="10,226,0,0" VerticalAlignment="Top" Width="861">
            <Button x:Name="b_enable_disable_debug" Content="Enable All Debug" HorizontalAlignment="Left" Margin="476,-46,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.333,0.1" Click="b_enable_disable_debug_Click"/>
            <Button x:Name="b_install_apk" Content="Install APKs" HorizontalAlignment="Left" Margin="587,-46,0,0" VerticalAlignment="Top" Width="75" Click="b_install_apk_Click"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="221" Margin="10,0,0,0" VerticalAlignment="Top" Width="861">

            <Label x:Name="l_version" Content="Cuerrent Release" HorizontalAlignment="Left" Margin="23,58,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,-0.077"/>
            <Label x:Name="l_connected" Content="Device  Not Connected" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top" Background="#FFDC9D96"/>
            <Label x:Name="l_Serial" Content="Serial Number" HorizontalAlignment="Left" Margin="23,84,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,0.308"/>
            <Label x:Name="l_release_val" Content="None" HorizontalAlignment="Left" Margin="145,58,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.447,-0.115"/>
            <Label x:Name="l_serial_val" Content="None" HorizontalAlignment="Left" Margin="146,83,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.026,0.462"/>
            <Label x:Name="l_calib_file" Content="Calib files" HorizontalAlignment="Left" Margin="23,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.105,0.5"/>
            <Label x:Name="l_calib_files_val" Content="None" HorizontalAlignment="Left" Margin="145,110,0,0" VerticalAlignment="Top"/>
            <Label x:Name="l_battery" Content="NA" HorizontalAlignment="Left" Margin="724,10,0,0" VerticalAlignment="Top" Background="WhiteSmoke"/>
            <Label x:Name="l_voltage_header" Content="Voltage:" HorizontalAlignment="Left" Margin="663,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.737,0.192"/>
            <Label x:Name="l_version_engine" Content="Current engine" HorizontalAlignment="Left" Margin="433,102,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.105,0.077"/>
            <Label x:Name="l_engine_val" Content="None" HorizontalAlignment="Left" Margin="522,102,0,0" VerticalAlignment="Top"/>
            <Label x:Name="l_installed_apps" Content="Installed apps" HorizontalAlignment="Left" Margin="23,137,0,0" VerticalAlignment="Top"/>
            <Image x:Name="logo" Source="INFINITY_logo.jpg" Grid.Column="0" Margin="0,452,9,-265" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Right" Width="176" Grid.RowSpan="1" />

        </Grid>
        <ProgressBar x:Name="Progress_bar" HorizontalAlignment="Left" Height="14" Margin="34,233,0,0" VerticalAlignment="Top" Width="811"/>
        <Grid HorizontalAlignment="Left" Height="176" Margin="10,315,0,0" VerticalAlignment="Top" Width="861">
            <ScrollViewer Name="Scroller" Margin="0,-57,0,57" Background="#262626">
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <ItemsControl  Name="log" ItemsSource="{Binding logItems, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Text}" Foreground="White" FontFamily="Consolas"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="27" Margin="21,288,0,0" VerticalAlignment="Top" Width="850"/>
        <Button x:Name="b_refresh" Content="Refresh" HorizontalAlignment="Left" Margin="211,23,0,0" VerticalAlignment="Top" Width="75"/>
        

    </Grid>
</Window>
