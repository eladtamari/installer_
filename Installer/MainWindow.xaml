<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="553" Width="891">
    <Grid Margin="0,0,2,0">
        <Button x:Name="b_pull" Content="Pull Dependancies" HorizontalAlignment="Left" Margin="259,246,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.947,0.7" Click="b_pull_Click"/>
        <Button x:Name="b_push" Content="Push Dependancies" HorizontalAlignment="Left" Margin="133,246,0,0" VerticalAlignment="Top" Width="112" Click="b_push_Click"/>
        <Button x:Name="b_install" Content="Install Image" HorizontalAlignment="Left" Margin="44,246,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="tb_image_folder_path" HorizontalAlignment="Left" Height="23" Margin="123,79,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="644"/>
        <Grid HorizontalAlignment="Left" Height="38" Margin="10,239,0,0" VerticalAlignment="Top" Width="861">
            <Button x:Name="b_enable_disable_debug" Content="Enable All Debug" HorizontalAlignment="Left" Margin="374,7,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.333,0.1" Click="b_enable_disable_debug_Click"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="221" Margin="10,10,0,0" VerticalAlignment="Top" Width="861">
            <Button x:Name="b_browse" Content="Browse" HorizontalAlignment="Left" Margin="23,69,0,0" VerticalAlignment="Top" Width="78" Click="b_browse_Click" Height="21"/>
            <Label x:Name="l_version" Content="Cuerrent Release" HorizontalAlignment="Left" Margin="23,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,-0.077"/>
            <Label x:Name="l_connected" Content="Device  Not Connected" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top" Background="#FFDC9D96"/>
            <Label x:Name="l_Serial" Content="Serial Number" HorizontalAlignment="Left" Margin="23,137,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.237,0.308"/>
            <Label x:Name="l_release_val" Content="None" HorizontalAlignment="Left" Margin="145,111,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.447,-0.115"/>
            <Label x:Name="l_serial_val" Content="None" HorizontalAlignment="Left" Margin="146,136,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.026,0.462"/>
            <Label x:Name="l_hexagon" Content="Hexagon Path" HorizontalAlignment="Left" Margin="23,163,0,0" VerticalAlignment="Top"/>
            <Label x:Name="l_hexagon_path_val" Content="None" HorizontalAlignment="Left" Margin="146,162,0,0" VerticalAlignment="Top"/>
            <Label x:Name="l_calib_file" Content="Calib files" HorizontalAlignment="Left" Margin="23,192,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.105,0.5"/>
            <Label x:Name="l_calib_files_val" Content="None" HorizontalAlignment="Left" Margin="145,188,0,0" VerticalAlignment="Top"/>
        </Grid>
        <ProgressBar HorizontalAlignment="Left" Height="14" Margin="44,305,0,0" VerticalAlignment="Top" Width="811"/>
        <Grid HorizontalAlignment="Left" Height="176" Margin="10,328,0,-4" VerticalAlignment="Top" Width="861">
            <ScrollViewer Name="Scroller" Margin="0" Background="#262626">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding ConsoleOutput, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=.}" Foreground="White" FontFamily="Consolas"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBox Text="{Binding ConsoleInput, Mode=TwoWay}" Background="#808080" Foreground="White" FontFamily="Consolas" Name="InputBlock" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" />
                </StackPanel>
            </ScrollViewer>
            </Grid>
            <Grid HorizontalAlignment="Left" Height="27" Margin="21,301,0,0" VerticalAlignment="Top" Width="850"/>

    </Grid>
</Window>
